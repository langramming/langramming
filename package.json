{
  "name": "langramming",
  "private": true,
  "description": "The langramming project",
  "license": "MIT",
  "repository": "https://github.com/langramming/langramming",
  "scripts": {
    "build": "mvn clean package",
    "server": "java -jar webapp/target/langramming-*.jar --spring.profiles.active=local",
    "server:debug": "java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=:5005 -jar webapp/target/langramming-*.jar --spring.profiles.active=local",
    "start": "mvn clean spring-boot:run -Dspring-boot.run.profiles=local",
    "web": "yarn workspace web start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0",
    "prettier-plugin-package": "^1.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.java": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "web"
  ]
}
