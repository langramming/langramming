{
  "name": "langramming",
  "private": true,
  "license": "MIT",
  "description": "The langramming project",
  "repository": "https://github.com/langramming/langramming",
  "scripts": {
    "build": "mvn clean package",
    "start": "mvn clean spring-boot:run -Dspring-boot.run.profiles=local",
    "server": "java -jar webapp/target/langramming-*.jar --spring.profiles.active=local",
    "server:debug": "java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=:5005 -jar webapp/target/langramming-*.jar --spring.profiles.active=local",
    "web": "yarn workspace web start"
  },
  "workspaces": [
    "web"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}
